# init_data_template():
#   Initializes the container's volume by creating symlinks
#   from the /data directory to the rest of the system so that we can
#   later bind mount and own volume into this folder and thus configure
#   the container's system dynamically.
function init_data_template() {
    cd /
    mkdir /data-template
    cat /etc/volume-data-list | while read i ; do
        echo $i
        if [ -e $i ] ; then
            tar cf - .$i | ( cd /data-template && tar xf - )
        else
            mkdir -p /data-template$( dirname $i )
        fi
        mkdir -p $( dirname $i )
        if [ "$i" == /var/log/ ] ; then
            mv /var/log /var/log-removed
        else
            rm -rf $i
        fi
        ln -sf /data${i%/} ${i%/}
    done
}
